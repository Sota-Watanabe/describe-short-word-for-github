{
  "manifest_version": 3,
  "name": "Chrome Extension with React & Webpack",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "host_permissions": [
    "https://jp.mercari.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "tabs",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": []
    }
  ]
}
